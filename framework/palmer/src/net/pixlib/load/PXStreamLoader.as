	public class PXStreamLoader extends PXAbstractLoader	{		//--------------------------------------------------------------------		// Public API		//--------------------------------------------------------------------				/**		 * Creates new instance.		 * 		 * @langversion 3.0		 * @playerversion Flash 10		 */			public function PXStreamLoader(key : String = null)		{			super(new PXStreamLoaderStrategy());						name = key;		}				/**		 * Returns URLStream content.		 * 		 * @return	The URLStream content		 * 		 * @langversion 3.0		 * @playerversion Flash 10		 */		public function getStream() : URLStream		{			return URLStream(content);		}	}
}
