		 * @playerversion Flash 10		 */		public function deserialize(serializedContent : Object, target : Object = null, key : String = null ) : Object		{			try			{				var bytes : ByteArray = serializedContent as ByteArray;				var swf : Loader = new Loader();				swf.loadBytes(bytes);								return swf;			}			catch( e : Error )			{				throw new PXIllegalArgumentException("deserialize() error. Content is not Display compliant", this);			}						return null;		}		/**		 * Returns string represenation.		 * 		 * @langversion 3.0		 * @playerversion Flash 10		 */
		public function toString() : String 		{			return PXStringifier.process(this);		}	}}